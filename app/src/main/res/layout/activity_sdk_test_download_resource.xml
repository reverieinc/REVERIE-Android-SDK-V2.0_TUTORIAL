<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dedede"
        android:textColor="#202020"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Download Resource"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Select Language:"
                    android:textSize="16sp"
                    android:textColor="#565656"
                    android:padding="10dp"/>

                <Spinner
                    android:id="@+id/dmLangSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/langResourceCheckTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#565656"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Check"/>

                <TextView
                    android:id="@+id/langResourceDownlaodTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#565656"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Download"/>


            </LinearLayout>


            <TextView
                android:id="@+id/dmStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#123456"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Status: "/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Check result"/>

            <TextView
                android:id="@+id/dmCheckResultlTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#202020"
                android:textSize="16sp"
                android:padding="10dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Download result"/>

            <TextView
                android:id="@+id/dmDownloadResultTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#202020"
                android:textSize="16sp"
                android:padding="10dp"
                android:text=""/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
