<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dedede"
        android:textColor="#202020"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="UI Components"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/uiComponentsRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Select Language:"
                            android:textSize="16sp"
                            android:textColor="#565656"
                            android:padding="10dp"/>

                        <Spinner
                            android:id="@+id/componentLangSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                        </Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#123456"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:text="Rev EditText"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.reverie.customcomponent.RevEditText
                                android:id="@+id/uiInputET"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:textColor="#202020"
                                android:textColorHint="#ababab"
                                android:padding="10dp"
                                android:maxLength="20"
                                android:hint="Set components text"/>

                            <TextView
                                android:id="@+id/uiResetTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#ffffff"
                                android:background="#282828"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:text="RESET"/>

                            <TextView
                                android:id="@+id/uiSetTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#ffffff"
                                android:background="#282828"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:text=" SET "/>

                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#123456"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:text="Rev TextView"/>

                        <com.reverie.customcomponent.RevTextView
                            android:id="@+id/uiTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#202020"
                            android:padding="10dp"
                            android:text="This is a Rev TextView"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#123456"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:text="Rev RadioButton"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.reverie.customcomponent.RevRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#565656"
                                android:textSize="16sp"
                                android:padding="0dp"
                                android:text="Radio 1"/>

                            <com.reverie.customcomponent.RevRadioButton
                                android:id="@+id/uiRadio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#565656"
                                android:textSize="16sp"
                                android:padding="0dp"
                                android:layout_marginLeft="20dp"
                                android:text="Radio 2"/>


                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#123456"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:text="Rev Checkbox"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.reverie.customcomponent.RevCheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#565656"
                                android:textSize="16sp"
                                android:padding="0dp"
                                android:text="Checkbox 1"/>

                            <com.reverie.customcomponent.RevCheckBox
                                android:id="@+id/uiCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#565656"
                                android:textSize="16sp"
                                android:padding="0dp"
                                android:layout_marginLeft="5dp"
                                android:text="Checkbox 2"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#123456"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:text="Rev ToggleButton"/>

                        <com.reverie.customcomponent.RevToggleButton
                            android:id="@+id/uiToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textOff="Toggle Off"
                            android:textOn="Toggle On"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#123456"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:text="Rev Button"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.reverie.customcomponent.RevButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#565656"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:layout_marginLeft="20dp"
                                android:text="Button 1"/>

                            <com.reverie.customcomponent.RevButton
                                android:id="@+id/uiButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#565656"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:layout_marginLeft="20dp"
                                android:text="Button 2"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <RelativeLayout
                android:id="@+id/downloadStatusRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:background="#efefff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#202020"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Download Language Resource"/>

                    <ProgressBar
                        android:id="@+id/pb1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="visible"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#565656"
                        android:text="Status"/>

                    <TextView
                        android:id="@+id/statusDownlaodResourceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:paddingLeft="10dp"
                        android:textColor="#565656"
                        android:text=""/>

                    <Button
                        android:id="@+id/statusDownlaodResourceButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:text="OK"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
